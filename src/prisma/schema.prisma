datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-1.1.x", "rhel-openssl-3.0.x"]
}

model PdvIntegration {
  id           Int      @id @default(autoincrement())
  username     String
  password     String
  clientId     String
  clientSecret String
  accessToken  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("pdv_integrations")
}

model Company {
  id        Int      @id @default(autoincrement())
  cnpj      String   @unique
  name      String   // Razão Social
  tradeName String?  // Nome Fantasia
  email     String?


  // Endereço
  cep         String?
  street      String?
  number      String?
  complement  String?
  neighborhood String?
  city        String?
  state       String?
  country     String?
  contaAzul    IntegracaoContaAzul?
  clientesCA      ContaAzulCliente[]
  recebimentosCA ContaAzulRecebimento[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}


// adicionar filiais do pdvlegal

// Armazena os grupos (PAIZAO ESPETINHOS, BEBIDAS, etc)
model PdvLicencaGrupo {
  id               Int      @id @default(autoincrement())
  codGrupo         Int      @unique // O 'codgrupo' da API. Unique para evitar duplicatas.
  nome             String   // nomegrupo
  documento        String?  // cpf_cnpj
  ativo            Boolean
  produto          String?  // GESTAO LEGAL, DELIVERY LEGAL, etc
  qtdLojasAtivas   Int
  qtdLojasDesativadas Int
  dataCadastroApi  DateTime? // datacadastro vindo da API

  // Relacionamento: Um grupo tem várias filiais
  filiais          PdvLicencaFilial[]

  // Controles internos do nosso banco
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("pdv_licenca_grupos")
}

// Armazena as filiais dentro de cada grupo
model PdvLicencaFilial {
  id               Int      @id @default(autoincrement())
  sistema         String?  @default("PDVLEGAL")
  codGrupo         Int
  codFilial        Int      @unique // O 'codfilial' da API
  nome             String   // nomefilial
  documento        String?  // cpf_cnpj
  ativo            Boolean
  matriz           Boolean  // matriz (true/false)
  email            String?
  dataCadastroApi  DateTime? // datacadastro vindo da API


  // Chave estrangeira ligando ao Grupo
  grupoId          Int
  grupo            PdvLicencaGrupo @relation(fields: [grupoId], references: [id], onDelete: Cascade)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("pdv_licenca_filiais")
}


model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


model IntegracaoContaAzul {
  id            String   @id @default(uuid())
  clientId      String
  clientSecret  String
  accessToken   String?  @db.Text
  refreshToken  String?  @db.Text
  expiresIn     Int?
  updatedAt     DateTime @updatedAt

  empresaId     Int      @unique
  empresa       Company  @relation(fields: [empresaId], references: [id])

  @@map("integracao_conta_azul")
}



model ContaAzulCliente {
  id              String   @id @default(uuid()) // Nosso ID interno do sistema
  caId            String   @unique              // O campo "id" do JSON (UUID deles)
  idLegado        Int?                          // O campo "id_legado"
  uuidLegado      String?                       // O campo "uuid_legado"
  nome            String
  documento       String?                       // CPF ou CNPJ
  email           String?
  telefone        String?
  ativo           Boolean  @default(true)
  tipoPessoa      String?                       // "Jurídica" ou "Física"
  perfis          String[]                      // Array de strings ["Cliente", "Fornecedor"]
  observacoes     String?  @db.Text             // "observacoes_gerais"
  dataCriacaoCA   DateTime?                     // "data_criacao" do JSON
  dataAlteracaoCA DateTime?                     // "data_alteracao" do JSON
  createdAt       DateTime @default(now())      // Quando sincronizamos a primeira vez
  updatedAt       DateTime @updatedAt           // Última vez que o nosso sistema atualizou
  contratoId         String?   @unique // ID do contrato na CA (para evitar duplicidade em outros clientes)
  contratoStatus     String?   // "ATIVO", "INATIVO"
  contratoNumero     Int?      // Numero do contrato
  contratoInicio     DateTime?
  contratoVencimento DateTime? // Proximo Vencimento
  recebimentos ContaAzulRecebimento[]
  empresaId       Int
  empresa         Company  @relation(fields: [empresaId], references: [id])
  @@map("conta_azul_clientes")
}

// --- NOVO MODEL: FINANCEIRO ---
model ContaAzulRecebimento {
  id              String   @id @default(uuid()) // Nosso ID interno

  // Mapeamento solicitado
  id_ca_receber   String   @unique              // "id" do JSON
  status          String                        // "OVERDUE", "ACQUITTED"
  total           Float                         // "total"
  Venda_CA        String                        // "descricao"
  data_vencimento DateTime                      // "data_vencimento"
  Venda_Status    String                        // "status_traduzido"
  Venda_A_Receber Float                         // "nao_pago"
  Venda_Pago      Float                         // "pago"
  Venda_dtCriacao DateTime                      // "data_criacao"
  Venda_DtUpdate  DateTime                      // "data_alteracao"

  client_id       String                        // "cliente.id" (ID da Conta Azul)
  client_nome     String                        // "cliente.nome"

  cliente         ContaAzulCliente @relation(fields: [client_id], references: [caId])

  empresaId       Int
  empresa         Company          @relation(fields: [empresaId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("conta_azul_recebimentos")
}
